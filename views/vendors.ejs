<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendors</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container mt-4">
        <h2 class="text-center"><b>Vendors</b></h2>
        <a href="/vendors/new" class="btn btn-primary mb-3">Add New Vendor</a>
        <!-- Back button to return to the vendors list -->
        <a href="/" class="btn btn-secondary mb-3">Back</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Stall Name</th>
                    <th>Canteen</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% vendors.forEach(vendor => { %>
                    <tr>
                        <td><%= vendor.name %></td>
                        <td><%= vendor.canteen %></td>
                        <td>
                            <a href="/vendors/<%= vendor.id %>/menu" class="btn btn-secondary">Menu Items</a>
                            <a href="/vendors/<%= vendor.id %>/edit" class="btn btn-warning">Edit</a>
                            <form action="/vendors/<%= vendor.id %>/delete" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <%- include('partials/footer.ejs') %>
</body>
</html>


