<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendor Login Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/navbar.ejs') %>
    
    <div class="container mt-4">
        <h2 class="text-center"><b>Vendor Login Page</b></h2>
        <p class="text-center">Please enter your vendor login details below</p>

        <!-- Vendor Login Form -->
        <form action="/login/vendor" method="POST" class="mx-auto" style="max-width: 400px;">
            <div class="mb-3">
                <label for="vendorEmail" class="form-label"><b>Email address:</b></label>
                <input type="email" class="form-control" id="vendorEmail" name="email" required>
            </div>
            <div class="mb-3">
                <label for="vendorPassword" class="form-label"><b>Password:</b></label>
                <input type="password" class="form-control" id="vendorPassword" name="password" required>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
    
    <%- include('partials/footer.ejs') %>
</body>
</html>



