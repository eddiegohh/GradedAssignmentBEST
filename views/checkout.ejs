<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container mt-4">
        <h2 class="text-center"><b>Checkout</b></h2>
        <div class="cart-items mt-4">
            <ul id="cart-items-list" class="list-group">
                <% cartItems.forEach(function(item) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>Canteen:</strong> <%= item.canteen %> <br>
                            <strong>Vendor:</strong> <%= item.vendor %> <br>
                            <strong>Food:</strong> <%= item.food %> <br>
                            <strong>Quantity:</strong> <%= item.quantity %>
                        </div>
                        <button class="btn btn-danger btn-sm" onclick="removeFromCart('<%= item.id %>')">Delete</button>
                    </li>
                <% }); %>
            </ul>
        </div>
        <div class="text-center mt-4">
            <button id="confirm-order" class="btn btn-primary">Confirm Order</button>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('confirm-order').addEventListener('click', function() {
                fetch('/checkout/confirm', {
                    method: 'POST',
                })
                .then(response => response.json())
                .then(data => {
                    window.location.href = `/ordersummary?order=${encodeURIComponent(JSON.stringify(data.order))}`;
                })
                .catch(error => console.error('Error confirming order:', error));
            });
        });

        function removeFromCart(itemId) {
            fetch(`/cart/remove/${itemId}`, {
                method: 'DELETE'
            })
            .then(response => response.text())
            .then(data => {
                alert('Item removed from cart');
                location.reload(); // Reload the page to update the cart items list
            })
            .catch(error => console.error('Error removing item:', error));
        }
    </script>
</body>
</html>










